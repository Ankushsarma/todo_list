<!DOCTYPE html>
<html>
<head>
  <title>My To-Do List</title>
  <link rel="stylesheet" href="styles/home.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body>
<nav>

 
 <div class="navLink">
  <a href="/">Home</a> 
  <a href="/history">History</a>
  <a href="/logout">Logout</a> 
 </div>
 
</nav>
 
<div class="mainContainer container-fluid">

  <div class="box">
<h1 class="heading">Welcome <%= name %> </h1>

  <!-- Filter Links -->
   <div class="filters">
    <strong>Filter: </strong>
    <a href="/">None</a> 
    <a href="/?filter=priority">Priority</a> 
    <a href="/?filter=timeLeft">Time Left</a>
   </div>
  

  <!-- Task Input Form -->
  <form action="/" method="POST" style="margin-top:20px;">
    <input type="text" name="task" placeholder="Enter new task" required>
    <input type="datetime-local" name="dueDate">
    <select name="priority">
      <option value="1">High</option>
      <option value="2" selected>Medium</option>
      <option value="3">Low</option>
    </select>
    <button class="submitBtn" type="submit"><i class="fa-solid fa-plus"></i></button>
  </form>
<hr>
  <!-- Task List -->
  <h2>Your Tasks</h2>
  <ul>
    <% tasks.forEach(function(task){ %>
      <li>
        <% if(!task.completed){ %>
          <a href="/marks_as_done/<%= task._id %>"><i class="fa-solid fa-check"></i></a> 
        <% } %>
        <%= task.text %>
        <% if(task.dueDate){ %>
          | <i class="fa-solid fa-calendar"></i>: <%= new Date(task.dueDate).toLocaleString() %> 
          | <i class="fa-solid fa-hourglass-end"></i>: <span class="time-left" data-duedate="<%= task.dueDate.toISOString() %>" data-completed="<%= task.completed %>"></span>
        <% } %>
        | <a href="/remove_task/<%= task._id %>"><i class="fa-solid fa-xmark"></i></a>
        
      </li>
    <% }) %>
  </ul>

  <hr>
</div>
</div>

  <script>
    function updateTimeLeft() {
      const spans = document.querySelectorAll('.time-left');
      const now = new Date();

      spans.forEach(span => {
        const dueDate = new Date(span.dataset.duedate);
        const completed = span.dataset.completed === "true";
        const diff = completed ? 0 : (dueDate - now);

        if(diff <= 0 && !completed) {
          span.textContent = "â° Overdue!";
          span.className = "overdue";
        } else if(!completed){
          const hours = Math.floor(diff / (1000*60*60));
          const minutes = Math.floor((diff % (1000*60*60)) / (1000*60));
          const seconds = Math.floor((diff % (1000*60)) / 1000);
          span.textContent = `${hours}h ${minutes}m ${seconds}s`;

          if(diff < 3600*1000) span.className = "soon";
          else span.className = "on-time";
        }
      });
    }

    setInterval(updateTimeLeft, 1000);
    updateTimeLeft();
  </script>
</body>
</html>
